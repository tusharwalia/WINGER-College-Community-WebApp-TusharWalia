<div id="sign-in">
<h1 class="row justify-content-center" id="gg">Sign In</h1>

<form class="row justify-content-center mt-5" action="/users/create-session" method="POST">
    <input class="row justify-content-center" style="width: 80%;" type="email" name="email" placeholder="Email"  required>
    <input class="row justify-content-center mt-3" style="width: 80%;" type="password" name="password" placeholder="Password"  required>
    <input class="row justify-content-center mt-4" style="width: 50%;" type="submit" value="Sign In">

</form>

<div class="row mt-5">
<p class="col-6 text-center justify-content-center">
    <a href="/users/auth/google">Google Sign in/Sign up</a>
</p>

<p class="forgot col-6 text-center justify-content-center">
    <a href="/users/forget-password">Forgot Password?</a>
</p>
</div>

</div>