<div id="container">

    <h1 class="row justify-content-center">Sign Up</h1>
    <form class="row mt-5 justify-content-center" action="/users/create" method="POST" enctype="multipart/form-data">
    <input class="row" style="width: 80%;" type="text" name="name" placeholder="Your Name" required>
    <input class="row mt-2" style="width: 80%;" type="email" name="email" placeholder="Your Email" required>
    <input class="row mt-2" style="width: 80%;" type="password" name="password" placeholder="Password" required>
    <input class="row mt-2" style="width: 80%;" type="password" name="confirm_password" placeholder="Confirm Password" required>
    <br><br>

    <P class="row mt-3 text-center justify-content-center">Add your profile picture below</P>
    <input class="row mt-2 text-center justify-content-center" type="file" name="avatar"  placeholder="Profile Picture">

    <input class="row mt-2 justify-content-center" style="width: 80%;" type="submit" value="Sign Up">

</form>

<p>
    <a href="/users/auth/google">Google Sign in/Sign up</a>
</p>

</div>
